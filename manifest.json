{
  "manifest_version": 2,
  "name": "Fiyat Takipçisi Pro",
  "version": "2.1.0",
  "description": "Akıllı fiyat takibi - Gelişmiş algoritmalar, fiyat grafikleri, fiyat alarmları ve 50+ site desteği",
  "author": "JustSelo",
  "browser_specific_settings": {
    "gecko": {
      "id": "fiyat-takipci-pro@github.io",
      "strict_min_version": "109.0"
    }
  },
  "data_collection_permissions": {
    "required": []
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "alarms",
    "tabs",
    "activeTab",
    "<all_urls>",
    "webNavigation",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "background": {
    "scripts": [
      "lib/config.js",
      "lib/errors.js",
      "lib/validators.js",
      "lib/cache.js",
      "lib/messaging.js",
      "lib/helpers.js",
      "lib/sites.js",
      "lib/parser.js",
      "lib/alerts.js",
      "lib/data-manager.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Fiyat Takipçisi Pro"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/config.js",
        "lib/errors.js",
        "lib/validators.js",
        "lib/cache.js",
        "lib/messaging.js",
        "lib/helpers.js",
        "lib/sites.js",
        "lib/parser.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "lib/config.js",
    "lib/errors.js",
    "lib/validators.js",
    "lib/cache.js",
    "lib/messaging.js",
    "lib/helpers.js",
    "lib/sites.js",
    "lib/parser.js",
    "lib/alerts.js",
    "lib/data-manager.js",
    "lib/cropper.min.js",
    "lib/cropper.min.css",
    "debug.html",
    "picker.js"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}